{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "dist/main",
    "rootDir": "main",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "types": ["node", "electron"],
    "skipLibCheck": true
  },
  "include": ["main/**/*.ts"],
  "exclude": ["node_modules", "src", ".next"]
}
